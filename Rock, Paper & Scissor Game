from random import randint
import sys
import os

i=2
while (i>1):
    player = input("Kindly enter your choice\n")
    #print(player)
    computer = randint(1,3)
    print(computer)

    if (player == "r" and computer == 1) or (player == "s" and computer == 2) or (player == "p" and computer ==3):
        print("Draw")
        
    if (player == "r" and computer == 2) or (player == "p" and computer == 1) or (player == "s" and computer ==3):
        print("Player Win")

    else:
        print("Computer Wins")
    

